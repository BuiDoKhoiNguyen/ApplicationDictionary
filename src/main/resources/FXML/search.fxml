<AnchorPane prefHeight="570.0" prefWidth="735.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SearchController">
   <children>
      <TextField fx:id="searchField" layoutX="14.0" layoutY="57.0" onKeyTyped="#searchWord" prefHeight="50.0" prefWidth="240.0" promptText="Enter Word..." styleClass="text-field" stylesheets="@../css/search.css" />
      <Label fx:id="searchLabel" layoutY="124.0" prefHeight="60.0" prefWidth="125.0" text="Search" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label fx:id="translateLabel" layoutY="184.0" prefHeight="60.0" prefWidth="125.0" text="Translate" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label fx:id="favouriteLabel" layoutY="244.0" prefHeight="60.0" prefWidth="125.0" text="Favourite" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label fx:id="editLabel" layoutY="304.0" prefHeight="60.0" prefWidth="125.0" text="Edit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label fx:id="gameLabel" layoutY="364.0" prefHeight="60.0" prefWidth="125.0" text="Game" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <ListView fx:id="wordList" layoutX="14.0" layoutY="123.0" onMouseClicked="#selectWord" prefHeight="415.0" prefWidth="240.0" />
      <AnchorPane layoutX="260.0" layoutY="15.0" prefHeight="523.0" prefWidth="436.0" style="-fx-background-color: #ffffff;">
         <children>
            <Label layoutX="13.0" layoutY="7.0" stylesheets="@../css/search.css" text="Nghĩa của từ">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <WebView fx:id="definitionView" layoutY="108.0" prefHeight="415.0" prefWidth="462.0" />
            <HTMLEditor fx:id="editField" htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" layoutY="108.0" prefHeight="415.0" prefWidth="462.0" visible="false" />
            <HBox layoutX="312.0" layoutY="57.0" prefHeight="50.0" prefWidth="150.0">
               <children>
                  <ToggleButton fx:id="favourButton" mnemonicParsing="false" onMouseClicked="#favouriteWord" prefHeight="50.0" prefWidth="50.0" styleClass="button-favourite" stylesheets="@../css/search.css" />
                  <ToggleButton fx:id="editingButton" mnemonicParsing="false" onMouseClicked="#editWord" prefHeight="50.0" prefWidth="50.0" styleClass="button-edit" stylesheets="@../css/search.css" />
                  <Button fx:id="deleteButton" mnemonicParsing="false" onMouseClicked="#deleteWord" prefHeight="50.0" prefWidth="50.0" styleClass="button-delete" stylesheets="@../css/search.css" />
               </children>
            </HBox>
            <Button layoutX="30.0" layoutY="74.0" mnemonicParsing="false" styleClass="button-audio" stylesheets="@../css/search.css" text="US" />
            <Button layoutX="103.0" layoutY="74.0" mnemonicParsing="false" styleClass="button-audio" stylesheets="@../css/search.css" text="UK" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
